{
	"name": "@kotobad/backend",
	"type": "module",
	"scripts": {
		"dev": "wrangler dev --ip 0.0.0.0 --port 8787",
		"dev:prod": "wrangler dev --ip 0.0.0.0 --port 8787 -e dev-prod",
		"deploy": "wrangler deploy --minify",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"generate": "drizzle-kit generate",
		"local:migration": "bun x wrangler d1 migrations apply b3s-db --local",
		"remote:migration": "wrangler d1 migrations apply b3s-db --remote",
		"local:tables": "wrangler d1 execute b3s-db --local --command \"SELECT sql FROM sqlite_master WHERE type='table';\"",
		"remote:tables": "wrangler d1 execute b3s-db --remote --command \"SELECT sql FROM sqlite_master WHERE type='table';\""
	},
	"dependencies": {
		"@auth/drizzle-adapter": "^1.11.1",
		"@better-auth/cli": "^1.4.7",
		"@hono/swagger-ui": "^0.5.2",
		"@hono/zod-openapi": "^1.1.5",
		"@hono/zod-validator": "^0.7.5",
		"@kotobad/shared": "workspace:*",
		"@libsql/client": "^0.15.15",
		"bcryptjs": "^3.0.3",
		"better-auth": "^1.4.7",
		"drizzle-orm": "^0.44.7",
		"hono": "^4.11.1",
		"jsonwebtoken": "^9.0.3",
		"next-svgr": "^0.0.2",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20251217.0",
		"@svgr/webpack": "^8.1.0",
		"@types/bcryptjs": "^3.0.0",
		"@types/jsonwebtoken": "^9.0.10",
		"drizzle-kit": "^0.31.8",
		"wrangler": "^4.55.0"
	}
}
