{
	"name": "@b3s/backend",
	"type": "module",
	"scripts": {
		"dev": "wrangler dev --ip 0.0.0.0 --port 8787 --env-file .dev.vars",
		"dev:prod": "wrangler dev --ip 0.0.0.0 --port 8787 -e dev-prod",
		"deploy": "wrangler deploy --minify",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"generate": "drizzle-kit generate",
		"local:migration": "bun x wrangler d1 migrations apply b3s-db --local",
		"remote:migration": "wrangler d1 migrations apply b3s-db --remote",
		"tables": "wrangler d1 execute b3s-db --local --command \"SELECT sql FROM sqlite_master WHERE type='table';\""
	},
	"dependencies": {
		"@auth/drizzle-adapter": "^1.10.0",
		"@b3s/frontend": "workspace:*",
		"@b3s/shared": "workspace:*",
		"@hono/swagger-ui": "^0.5.2",
		"@hono/zod-openapi": "^1.1.0",
		"@hono/zod-validator": "^0.7.2",
		"@libsql/client": "^0.15.12",
		"drizzle-orm": "^0.44.4",
		"hono": "^4.9.4",
		"next-svgr": "^0.0.2",
		"zod": "^4.1.1"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250822.0",
		"@svgr/webpack": "^8.1.0",
		"@types/bcryptjs": "^3.0.0",
		"drizzle-kit": "^0.31.4",
		"wrangler": "^4.4.0"
	}
}
