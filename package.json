{
	"name": "kotobad",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"devDependencies": {
		"@types/bun": "latest",
		"docsify-cli": "^4.4.4",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"scaffdog": "^4.1.0",
		"wrangler": "^4.60.0"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "bun --filter '@kotobad/backend' dev & bun --filter '@kotobad/frontend' dev",
		"dev:frontend": "bun --filter '@kotobad/frontend' dev",
		"dev:backend": "bun --filter '@kotobad/backend' dev",
		"build:frontend": "bun --filter '@kotobad/frontend' build",
		"build:backend": "bun --filter '@kotobad/backend' build",
		"deploy:frontend": "bun --filter '@kotobad/frontend' deploy",
		"deploy:backend": "bun --filter '@kotobad/backend' deploy",
		"format": "biome format --write",
		"lint": "biome lint --write",
		"check": "biome check --write",
		"prepare": "husky", 
		"docs": "scaffdog generate",
		"docs:serve": "bun scripts/docsify-generate-sidebar.ts && docsify serve ./docs"
	},
	"lint-staged": {
		"packages/**/src/**/*.{ts,tsx}": [
			"bunx biome format --write",
			"bunx biome check --write"
		]
	},
	"dependencies": {
		"@biomejs/biome": "^2.3.12"
	}
}
