{
	"name": "kotobad",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"devDependencies": {
		"@types/bun": "latest",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"wrangler": "^4.55.0"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "bun --filter '*' dev",
		"dev:frontend": "bun --filter 'frontend' dev",
		"dev:backend": "bun --filter 'backend' dev",
		"build:frontend": "bun --filter '@kotobad/frontend' build",
		"build:backend": "bun --filter '@kotobad/backend' build",
		"deploy:frontend": "bun --filter '@kotobad/frontend' deploy",
		"deploy:backend": "bun --filter '@kotobad/backend' deploy",
		"format": "biome format --write",
		"lint": "biome lint --write",
		"check": "biome check --write",
		"prepare": "husky"
	},
	"lint-staged": {
		"packages/**/src/**/*.{ts,tsx}": [
			"bunx biome format --write",
			"bunx biome check --write"
		]
	},
	"dependencies": {
		"@biomejs/biome": "^2.3.10"
	}
}
